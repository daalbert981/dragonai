# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dragonai?schema=public"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for password reset and verification)
# For Gmail: use "smtp.gmail.com" as host and "587" as port
# For SendGrid: use "smtp.sendgrid.net" as host and "587" as port
# For development, emails will be logged to console if not configured
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@dragonai.com"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"

# File Storage Options
# Option 1: Vercel Blob Storage (simpler for demo/prototyping)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# Option 2: Google Cloud Storage (recommended for production)
GCS_BUCKET_NAME="user_summaries"

# Local development - use JSON file
GOOGLE_APPLICATION_CREDENTIALS="./static/gcs-service-account.json"

# Production deployment only (leave empty for local dev)
GCS_PROJECT_ID=""
GCS_CLIENT_EMAIL=""
GCS_PRIVATE_KEY=""
