// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole      @default(STUDENT)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  courses       Course[]
  chatSessions  ChatSession[]
  messages      Message[]
}

enum UserRole {
  STUDENT
  ADMIN
  SUPERADMIN
}

// Course model for organizing chat content
model Course {
  id           String        @id @default(cuid())
  name         String
  description  String?
  userId       String
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatSessions ChatSession[]
  documents    Document[]

  @@index([userId])
}

// Chat session model
model ChatSession {
  id        String    @id @default(cuid())
  title     String    @default("New Chat")
  courseId  String
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  course    Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([courseId])
  @@index([userId])
}

// Message model for chat messages
model Message {
  id            String      @id @default(cuid())
  content       String      @db.Text
  role          MessageRole
  sessionId     String
  userId        String
  tokenCount    Int?
  documentIds   String[]    @default([])
  createdAt     DateTime    @default(now())

  // Relations
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([userId])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// Document model for uploaded files
model Document {
  id           String       @id @default(cuid())
  name         String
  originalName String
  mimeType     String
  size         Int
  url          String
  courseId     String
  userId       String
  status       DocumentStatus @default(PROCESSING)
  extractedText String?     @db.Text
  metadata     Json?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relations
  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([userId])
}

enum DocumentStatus {
  PROCESSING
  COMPLETED
  FAILED
}
